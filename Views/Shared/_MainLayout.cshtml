
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>MVC 50 Ders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home/Index">MVC Stok Takip</a>
            </div>
            @{
                var currentController = ViewContext.RouteData.Values["controller"].ToString();
            }

            <ul class="nav navbar-nav">
                <li class="@(currentController == "Category" ? "active" : "")">
                    <a href="/Category/Index">Kategoriler</a>
                </li>
                <li class="@(currentController == "Product" ? "active" : "")">
                    <a href="/Product/Index">Ürünler</a>
                </li>
                <li class="@(currentController == "Customer" ? "active" : "")">
                    <a href="/Customer/Index">Müşteriler</a>
                </li>
                <li class="@(currentController == "Sales" ? "active" : "")">
                    <a href="/Sales/Index">Satışlar</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#ModalHelp">Yardım</a>
                </li>
            </ul>

        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <!-- Yardım Modal -->
    <div class="modal fade" id="ModalHelp">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span data-dismiss="modal" class="btn glyphicon glyphicon-remove" style="float:right; font-size:20px;"></span>
                    <h3 class="modal-title">
                        Yardım Penceresi <span class="glyphicon glyphicon-info-sign text-info" style="font-size:15px;"></span>
                    </h3>
                </div>
                <div class="modal-body">
                    <p>Merhabalar, Ben <b>Nesrin Düzgün.</b><span class="glyphicon glyphicon-heart text-danger"></span></p>
                    <p>Bu uygulama Murat Yücedağ'ın Hazırladığı MVC 50 Dersinin örnek uygulamasıdır.</p>
                    <p>
                        <span class="glyphicon glyphicon-copyright-mark text-primary"></span>
                        Bu proje Nisan 2025 yılında yapılmıştır.
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

